<div class="w-5/6 mx-auto max-w-screen-xl flex-grow mb-10">
  <div class="mt-10 mb-5">
    <h1 class="text-4xl md:text-5xl font-semi-bold mb-10 pb-4 text-center">
      新規登録
    </h1>

    <%= form_with model: @user do |form| %>
      <!-- ユーザーネーム入力欄 -->
      <%= form.label :name, 'ユーザーネーム', class: "label mb-2 w-full md:w-1/2 mx-auto" %>
      <%= form.text_field :name, class: "input input-bordered form-control mb-5 w-full md:w-1/2 mx-auto" %>

      <!-- メールアドレス入力欄 -->
      <%= form.label :email, 'メールアドレス', class: "label mb-2 w-full md:w-1/2 mx-auto" %>
      <%= form.text_field :email, class: "input input-bordered form-control mb-5 w-full md:w-1/2 mx-auto" %>

      <!-- パスワード入力欄 -->
      <%= form.label :password, 'パスワード', class: "label mb-2 w-full md:w-1/2 mx-auto" %>
      <%= form.password_field :password, class: "input input-bordered form-control mb-5 w-full md:w-1/2 mx-auto" %>

      <!-- パスワード確認入力欄 -->
      <%= form.label :password_confirmation, 'パスワード再入力', class: "label mb-2 w-full md:w-1/2 mx-auto" %>
      <%= form.password_field :password_confirmation, class: "input input-bordered form-control mb-5 w-full md:w-1/2 mx-auto" %>
      <!-- 画像登録欄 -->
        <%= form.label :avatar, '画像登録', class: "label mb-2 w-full md:w-1/2 mx-auto" %>
        <%= form.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "file-input file-input-bordered form-control mb-5 w-full md:w-1/2 mx-auto" %>

      <div class="w-1/2 mx-auto flex justify-center text-center">
        <%= form.submit '新規登録', class: "btn mt-1" %>
      </div>
    <% end %>
  </div>
</div>